	"item": [
		{
			"name": "Get Covid News",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "e76718b1-9e79-4d7b-af54-b5ca2971d653",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"assert for text 'COVID' in title\",function () {",
							"    var jsonData = pm.response.json();",
							"    var articlesJson= jsonData.articles;",
							"        for(var i=0;i< articlesJson.length;i++){",
							"            pm.expect(articlesJson[i].title).to.include('COVID');",
							"        }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v2/everything?q=COVID&from=2020-04-01&sortBy=publishedAt&apiKey=bfe7f531ec34490dabc2d653be1b800a&pageSize=50&page=2",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v2",
						"everything"
					],
					"query": [
						{
